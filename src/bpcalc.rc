#include <version.hpp>

1 VERSIONINFO FILEVERSION BPCALC_VERSION_NUMBER
BEGIN
	BLOCK "StringFileInfo"
	BEGIN
		BLOCK "040901B5"
		BEGIN
			VALUE "CompanyName",		BPCALC_AUTHOR
			VALUE "FileDescription",	BPCALC_DESCRIPTION
			VALUE "LegalCopyright",		"Copyright (C) 2015 " BPCALC_AUTHOR
			VALUE "ProductName",		BPCALC_NAME
			VALUE "ProductVersion",		BPCALC_VERSION
		END
	END

	BLOCK "VarFileInfo"
	BEGIN
		VALUE "Translation", 0x409, 0x01B5
	END
END

2 ICON "bpcalc.ico"
